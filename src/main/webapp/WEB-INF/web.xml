<!DOCTYPE web-app PUBLIC
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>Default</servlet-name>
        <servlet-class>com.teamA.servlets.Default</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Default</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>PlayerServlet</servlet-name>
		<servlet-class>com.teamA.servlets.PlayerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PlayerServlet</servlet-name>
		<url-pattern>/players/*</url-pattern>
	</servlet-mapping>

    <resource-ref>
        <res-ref-name>localhost/mundialdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>



